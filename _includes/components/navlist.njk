
	<ul class="navlist">
	{%- if lang == "fr" %}
		{%- for chapter in collections.frenchPages %}
			{%- if chapter.url == page.url %}
				<li class="navlist__chapter navlist__chapter--Highlight">
						<a class="navlist__chapter__text navlist__chapter__text--highlight" href="{{ website.url }}{{ chapter.url }}">
							<span>{{ chapter.data.chapter_name }}<span>
						{%- if chapter.data.chapter_caption %}
							<br><small class="navlist__chapter__smallText navlist__chapter__smallText--highlight">{{ chapter.data.chapter_caption }}</small>
						{%- endif %}
						</a>
			{%- else %}
				<li class="navlist__chapter">
						<a class="navlist__chapter__text" href="{{ website.url }}{{ chapter.url }}">
							<span>{{ chapter.data.chapter_name }}<span>
